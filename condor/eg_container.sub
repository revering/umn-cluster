executable = /usr/bin/singularity
should_transfer_executable = no

should_transfer_files = yes
transfer_input_files = image.sif,$(input_file)

arguments = --bind /export/scratch:/working image.sif $(input_file)

queue input_file matching files /full/path/to/input/dir/*
